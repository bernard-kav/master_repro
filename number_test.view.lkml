view: number_test {
  derived_table: {
    sql:
    select -2 as numb
    UNION
    select -1 as numb
    UNION
    select 0 as numb
    UNION
    SELECT 1 as numb
    UNION
    SELECT 2 as numb

    ;;
  }

  dimension: numb {
    type: number
  }

  measure: count {
    type: count
    filters: {
      field: numb
      value: "1, -1"
    }
    drill_fields: [numb]
  }
